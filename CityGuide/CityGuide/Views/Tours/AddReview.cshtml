@model CG.Domain.Review

@{
    ViewBag.Title = "Add Review";
}
<link rel="stylesheet" href="~/Content/dist/font-awesome/css/font-awesome.min.css" />
<div class="navbar navbar-inverse navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle menu-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="height:40px;">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="float:right !important;"><span class="glyphicon glyphicon-user white"></span></button>
        </div>
        @if (!System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
        {
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        }
        else
        {
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        }
    </div>
</div>
<div class="category-header" style="height: 40px;">
    <img src="~/Content/images/arrow-black.png" style="margin-left:10px; margin-top:-1px" />
    <span style="line-height: 40px">Back</span>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="text-align: center;">
        <img src="~/Content/images/tourStar.png" style="margin-top:40px;"/>
        <h3 style="font-family:AlegryaSansRegular; font-weight: bold;">Hurray!</h3>
        <p id="text-Finished">You've just finished this tour.</p>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group" style="text-align: center;">
            <label class="control-label col-md-2" for="Text" style="font-size:20px;">Would you like to rate it?</label>
            <div class="col-md-10">
                <span id="demo" data-stars="0" style="font-size:30px; letter-spacing:5px;"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="center-block" style="width: 205px">
                    <input type="submit" value="DONE" class="btn btn-done" />
                    <input type="submit" value="CANCEL" class="btn btn-cancel" />
                </div>
            </div>
        </div>
    </div>
}
<script src="../../Content/dist/js/jquery-rate-picker.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $.ratePicker("#demo", {
            rate: function (stars) {

            }});
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
